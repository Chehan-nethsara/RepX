<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg11"
    android:orientation="vertical"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-50dp">
        <ImageView
            android:id="@+id/repxlogo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo4"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_userprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:gravity="center_horizontal"
        android:text="User Profile"
        android:textColor="@android:color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:letterSpacing="0.3"
        android:textSize="25sp"
        android:background="@drawable/bgcard"/>


        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

    <ImageView
        android:id="@+id/sales_profile_dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/usr1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bgcard"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="@color/cardview_dark_background">

        <TextView
            android:id="@+id/user_firstname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@android:color/black"
            android:gravity="center_horizontal"
            android:hint="First Name"
            android:textColorHint="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_lastname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@android:color/black"
            android:gravity="center_horizontal"
            android:hint="Last Name"
            android:textColorHint="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@android:color/black"
            android:gravity="center_horizontal"
            android:hint="Email"
            android:textColorHint="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_phn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@android:color/black"
            android:gravity="center_horizontal"
            android:hint="Phone No."
            android:textColorHint="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@android:color/black"
            android:gravity="center_horizontal"
            android:hint="Password"
            android:textColorHint="@android:color/black"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
    <Button
        android:id="@+id/user_edit"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:letterSpacing="0.3"
        android:text="Edit Details"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        />
        <Button
            android:id="@+id/user_delete"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:letterSpacing="0.3"
            android:text="Delete Profile"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            />
    </LinearLayout>


</LinearLayout>