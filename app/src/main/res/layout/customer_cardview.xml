<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dealer_card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="5dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="2dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:background="@drawable/layout_border"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_customer_card_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:text="oooooo"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_customer_card_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="44444"
                android:textSize="17dp" />
        </LinearLayout>

        <View
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btn_editCustomer"
            android:background="@drawable/ic_edit2_black_24dp"
            android:layout_marginRight="23dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"></Button>

        <Button
            android:id="@+id/btn_deleteCustomer"
            android:background="@drawable/ic_delete"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"></Button>


    </LinearLayout>

</androidx.cardview.widget.CardView>